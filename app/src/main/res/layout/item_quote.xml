<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- 分類標籤 (可選，仿照你的截圖) -->
    <TextView
        android:id="@+id/text_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5C8AE6"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="勵志"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 愛心按鈕 -->
    <ImageView
        android:id="@+id/btn_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_heart_outline"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 名言內容 -->
    <TextView
        android:id="@+id/text_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="生命中最重要的兩天：你出生的那天，以及你發現為何而生的那天。"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_category_label" />

    <!-- 作者 -->
    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#666666"
        android:textSize="14sp"
        tools:text="馬克·吐溫"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_quote"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>