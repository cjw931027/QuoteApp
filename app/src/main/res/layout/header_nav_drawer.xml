<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?attr/colorPrimary"
    android:padding="24dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Avatar Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:strokeWidth="2dp"
        app:strokeColor="#FFFFFF"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_header_username"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_header_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_placeholder"
            android:padding="16dp"
            android:background="#FFFFFF"
            app:tint="?attr/colorPrimary"
            android:contentDescription="Avatar" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_avatar"
        app:layout_constraintBottom_toTopOf="@id/tv_header_email"/>

    <TextView
        android:id="@+id/tv_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to sync quotes"
        android:textSize="14sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_username"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
