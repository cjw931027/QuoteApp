<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_quote"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?android:attr/colorBackground"
        app:title="新增名言"
        app:titleCentered="true"
        app:titleTextColor="?android:attr/textColorPrimary"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:navigationIconTint="?android:attr/textColorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名言內容"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp"/>

            <!-- [修改 5] 加入 inputType="textMultiLine|textCapSentences" 解決無法打字的問題 -->
            <EditText
                android:id="@+id/edit_quote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_area"
                android:padding="16dp"
                android:hint="輸入名言..."
                android:gravity="top"
                android:minLines="3"
                android:inputType="textMultiLine|textCapSentences"
                android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- [修改 5] 加入 inputType="textPersonName" 並移除 deprecated 的 singleLine -->
            <EditText
                android:id="@+id/edit_quote_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_area"
                android:padding="16dp"
                android:hint="例如：Steve Jobs (留空為匿名)"
                android:inputType="textPersonName"
                android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分類"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_area"
                android:padding="8dp"/>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <Button
            android:id="@+id/btn_save_quote"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="儲存"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#C4D1E8"
            android:textColor="#4A6594"
            app:cornerRadius="12dp"/>
    </FrameLayout>

</LinearLayout>