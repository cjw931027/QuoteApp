<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 右上角分享按鈕 -->
    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:src="@drawable/ic_share"
        app:tint="?android:attr/textColorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="分享名言"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 重抽按鈕 (固定在底部，但預留空間給導覽列) -->
    <!-- layout_marginBottom="110dp" 是為了避開 BottomNavigationView -->
    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="重抽"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#C4D1E8"
        android:textColor="#4A6594"
        app:cornerRadius="12dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 名言內容區 (佔據剩餘空間) -->
    <!-- 上方對齊父容器，下方對齊按鈕的頂部 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- 名言文字 -->
            <TextView
                android:id="@+id/text_quote"
                android:text="The only way to do great work is to love what you do."
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- 作者 -->
            <TextView
                android:id="@+id/text_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="— Steve Jobs"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>