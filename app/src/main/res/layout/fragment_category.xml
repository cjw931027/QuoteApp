<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- 上方標題列 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_category"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?android:attr/colorBackground"
        android:title="分類"
        android:titleTextColor="?android:attr/textColorPrimary"
        app:menu="@menu/menu_category"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 分類 RecyclerView -->
    <!-- 修改重點：
         1. paddingBottom="100dp"：預留足夠空間給底部導覽列
         2. clipToPadding="false"：讓內容在捲動時可以使用 Padding 的區域 (不會有一塊空白卡在那)
         3. 改用 paddingStart/End/Top 來個別設定其他邊距 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>